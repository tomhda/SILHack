{
  "manifest_version": 3,
  "name": "SILHack",
  "version": "0.1.1",
  "description": "Remap send keys for ChatGPT, Gemini, Perplexity, Messenger, plus Chatwork tag buttons.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["js/content.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
"https://gemini.google.com/*",
        "https://www.perplexity.ai/*",
        "https://perplexity.ai/*",
        "https://www.messenger.com/*",
        "https://messenger.com/*"
      ],
      "js": ["js/content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.chatwork.com/*",
        "https://chatwork.com/*"
      ],
      "js": ["js/chatwork_tags.js"],
      "run_at": "document_idle"
    }
  ]
}
